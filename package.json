{
  "name": "dalec-vscode-tools",
  "displayName": "DALEC VSCode Tools",
  "description": "dalec vscode extension for developers",
  "version": "0.0.2",
  "publisher": "ms-kubernetes-tools",
  "icon": "resources/dalec.png",
  "engines": {
    "vscode": "^1.108.1"
  },
  "categories": [
    "Other"
  ],
  "extensionDependencies": [
    "redhat.vscode-yaml"
  ],
  "activationEvents": [
    "onDebug:dalec-buildx",
    "onLanguage:yaml",
    "workspaceContains:**/*.yaml",
    "workspaceContains:**/*.yml"
  ],
  "preview": true,
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "dalec-vscode-tools.buildCurrentSpec",
        "title": "Dalec: Build Current Spec"
      },
      {
        "command": "dalec-vscode-tools.debugCurrentSpec",
        "title": "Dalec: Debug Current Spec"
      },
      {
        "command": "dalec-vscode-tools.rerunLastAction",
        "title": "Dalec: Rerun Last Action"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "dalec-vscode-tools.buildCurrentSpec",
          "when": "resourceLangId == yaml",
          "group": "navigation"
        },
        {
          "command": "dalec-vscode-tools.debugCurrentSpec",
          "when": "resourceLangId == yaml",
          "group": "navigation"
        }
      ],
      "explorer/context": [
        {
          "command": "dalec-vscode-tools.buildCurrentSpec",
          "when": "resourceLangId == yaml",
          "group": "navigation"
        },
        {
          "command": "dalec-vscode-tools.debugCurrentSpec",
          "when": "resourceLangId == yaml",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "Dalec Spec",
      "properties": {
        "dalec-spec.buildxCommand": {
          "type": "string",
          "default": "docker buildx",
          "description": "Command used to invoke buildx (e.g. 'docker buildx' or '/path/to/buildx')."
        },
        "dalec-spec.syntaxDirectives": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "ghcr.io/project-dalec/dalec/frontend:latest"
          ],
          "markdownDescription": "List of accepted Dalec frontend syntax directives. Files with `# syntax=<directive>` matching any of these values will be treated as valid Dalec specs.\n\n**Wildcard support:** Only suffix wildcards using `*` are supported. The `*` must be at the end of the pattern.\n\n**Examples:**\n- `ghcr.io/org/image:latest` — matches exactly `ghcr.io/org/image:latest`\n- `ghcr.io/org/image:*` — matches `ghcr.io/org/image:latest`, `ghcr.io/org/image:v1.0`, etc.\n- `my-registry.io/dalec:*` — matches any tag for `my-registry.io/dalec`\n\n**Not supported:**\n- `ghcr.io/*/image:latest` (wildcards in the middle)\n- `*.io/org/image:latest` (wildcards at the start)\n- `ghcr.io/org/image:v1.*` (wildcards not at the end)"
        },
        "dalec-spec.allowLegacyDirectives": {
          "type": "boolean",
          "default": true,
          "markdownDescription": "When enabled, also accept legacy/built-in directives (`ghcr.io/project-dalec/dalec/frontend:*`, `ghcr.io/azure/dalec/frontend:*`, and any image containing 'dalec'). Set to `false` to only accept directives listed in `syntaxDirectives`.\n\n**Warning:** If this is `false` and `syntaxDirectives` is empty, no Dalec specs will be recognized."
        }
      }
    },
    "debuggers": [
      {
        "type": "dalec-buildx",
        "label": "Dalec Buildx (docker buildx dap)",
        "configurationAttributes": {
          "launch": {
            "required": [
              "target"
            ],
            "properties": {
              "target": {
                "type": "string",
                "description": "Name of the dalec target to debug",
                "default": ""
              },
              "specFile": {
                "type": "string",
                "description": "Path to the dalec spec file (defaults to active editor)",
                "default": ""
              },
              "context": {
                "type": "string",
                "description": "Build context directory (defaults to workspace root)",
                "default": ""
              },
              "buildArgs": {
                "type": "object",
                "description": "Additional --build-arg values keyed by arg name",
                "default": {}
              }
            }
          }
        },
        "initialConfigurations": [
          {
            "name": "Dalec: Buildx Debug Current Spec",
            "type": "dalec-buildx",
            "request": "launch",
            "target": "example",
            "specFile": "${file}"
          }
        ]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "25.x",
    "@types/vscode": "^1.108.1",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.39.2",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.1",
    "webpack": "^5.104.1",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "yaml": "^2.8.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/project-dalec/dalec-vscode-extension"
  }
}
